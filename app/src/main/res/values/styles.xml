<resources>

    <!-- Base application theme. -->
    <style name="stl_theme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/Theme.AppCompat.NoActionBar</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:actionBarSize">0dp</item>
        <item name="android:windowBackground">@drawable/background</item>
    </style>

    <style name="stl_btns_main">
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textColor">@color/color_Text</item>
        <item name="android:background">@drawable/my_button</item>
    </style>

    <style name="stl_btns">
        <item name="android:textColor">@color/color_Text</item>
        <item name="android:background">@drawable/my_button</item>
        <item name="android:layout_margin">1dp</item>
    </style>

    <style name="stl_texts">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/color_Text</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="stl_inputs">
        <item name="android:textColor">@color/color_Text</item>
        <item name="android:textColorHint">@color/color_Text</item>
        <item name="android:gravity">end</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

</resources>
